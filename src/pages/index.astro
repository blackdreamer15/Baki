---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import LinkButton from "@components/atoms/LinkButton.astro";
// import GithubRepoCard from "@components/molecules/GithubRepoCard";
import HeroSection from "@components/molecules/HeroSection.astro";
import Hr from "@components/molecules/Hr.astro";
import Card from "@components/organisms/Card";
import Footer from "@components/organisms/Footer.astro";
// import { getFeaturedRepos } from "@utils/getFeaturedRepos";
import getSortedPosts from "@utils/getSortedPosts";
// import { getSortedTalks } from "@utils/getTalks";
import slugify from "@utils/slugify";

const posts = await getCollection("blog");
// const featuredRepos = await getFeaturedRepos();

const sortedPosts = getSortedPosts(posts);
// const sortedTalks = getSortedTalks();


---

<Layout>
  <main id="main-content">
    =<HeroSection />

    <Hr />

    <section id="recent-posts">
      <h2>üìúRecent Posts</h2>
      <ul>
        {
          sortedPosts.map(
            ({ data }, index) =>
              index < 5 && (
                <Card
                  href={`/posts/${slugify(data)}`}
                  frontmatter={data}
                  secHeading={false}
                />
              )
          )
        }
      </ul>
      <div class="all-posts-btn-wrapper">
        <LinkButton href="/blog">
          All Posts
          <svg xmlns="http://www.w3.org/2000/svg"
            ><path
              d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
            ></path>
          </svg>
        </LinkButton>
      </div>
    </section>

    <!-- <Hr /> -->

    <!-- {
      featuredRepos.length > 0 && (
        <>
          <section id="oss">
            <h2>üë®‚ÄçüíªOpen Source Contributions</h2>
            <div class="mt-3 grid grid-cols-1 gap-4 pt-4 sm:grid-cols-2">
              {featuredRepos.map(repo => (
                <GithubRepoCard {...repo} />
              ))}
            </div>

            <div class="all-posts-btn-wrapper">
              <LinkButton href="https://github.com/blackdreamer15">
