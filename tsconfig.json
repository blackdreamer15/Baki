{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			// "@assets/*": ["assets/*"],
			"@config": ["./src/config.ts"],
			"@components/*": ["./src/components/*"],
			"@content/*": ["./src/content/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@pages/*": ["./src/pages/*"],
			"@styles/*": ["./src/styles/*"],
			"@utils/*": ["./src/utils/*"]
		},
	}
}
